<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{> globalcss }} {{> globaljs }}
    <style>
      .room-title {
        border-bottom: solid 2px #0d6efd;
      }

      .post-top {
        border-bottom: solid 2px #0d6efd;
      }

      .post-title {
        font-weight: bold;
        font-size: 18px;
      }

      .post-info {
        font-size: 13px;
      }

      .post-content {
        min-height: 200px;
      }

      .post-comment-top {
        border-bottom: solid 2px #0d6efd;
      }

      .post-comment-input {
        border-top: solid 2px #0d6efd;
        border-bottom: solid 2px #0d6efd;
        padding: 10px 0;
      }

      .vertical-divide {
        width: 1px;
        height: 15px;
        margin: 0 5px;
        background-color: #eee;
      }

      .content {
        border-bottom: solid 1px #eee;
        cursor: pointer;
      }

      .comment-user-name {
        font-size: 14px;
        color: gray;
        display: flex;
        align-items: center;
      }
      .comment-date {
        font-size: 13px;
        color: gray;
        display: flex;
        align-items: center;
        justify-content: end;
      }

      .comment-content {
        font-size: 14px;
      }

      .reply-write {
        border: solid 1px #0d6efd;
        border-radius: 5px;
        background-color: #effbfb;
      }

      .reply-nick-name,
      .reply-password {
        padding: 10px;
      }

      .reply-content {
        padding: 0 10px 10px 10px;
      }

      @media (max-width: 768px) {
        .comment-date {
          justify-content: start;
        }
      }
    </style>
    <title>{{post.title}} - {{ post.coinName }} 종토방</title>
  </head>
  <body>
    {{> header }}
    <div class="d-flex">
      <div class="d-none d-md-block col-md-2"></div>
      <div class="col-12 col-md-8 mt-2">
        <div class="room-title py-2 px-1">
          <h3>{{post.coin_name}} 종토방</h3>
        </div>
        <div class="post-top mb-4 px-2">
          <div class="post-title mt-3 mb-1">
            <p>{{ post.title }}</p>
          </div>
          <div class="post-info d-flex justify-content-between mb-3">
            <div class="d-flex post-info align-items-center">
              <div class="post-user-name">
                <p>{{ post.user_name }}</p>
              </div>
              <div class="vertical-divide"></div>
              <div>
                <p>{{ post.timestamp }}</p>
              </div>
            </div>
            <div class="d-flex post-info">
              <div class="me-2">
                <p>조회 {{ post.views }}</p>
              </div>
              <div>
                <p>추천 {{ post.likes }}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="post-content px-1">
          <p>{{ post.content }}</p>
        </div>
        <div class="post-comment-top px-1 py-2">
          <p>전체 댓글 {{post.replies.length}}개</p>
        </div>
        <div class="post-comment-contents">
          {{#each post.replies }}
          <div class="content d-flex flex-wrap py-2 px-1">
            <div class="col-12 col-md-2 comment-user-name">{{user_name}}</div>
            <div class="col-12 col-md-7 comment-content">{{content}}</div>
            <div class="col-12 col-md-3 comment-date">{{timestamp}}</div>
            <form
              class="col-12 d-flex reply-write-container mt-2 d-none"
              action="/discussion-room/post/reply/reply"
              method="post"
            >
              <input type="hidden" value="{{id}}" />
              <div class="col-1"></div>
              <div class="col-11 reply-write">
                <div class="reply-top d-flex flex-wrap">
                  <div class="reply-nick-name col-5 col-md-3">
                    <input
                      class="form-control form-control-sm"
                      type="text"
                      placeholder="닉네임"
                      aria-label="닉네임"
                      value="익명"
                      maxlength="10"
                      id="replyUserName"
                      name="replyUserName"
                    />
                  </div>
                  <div class="col-5 col-md-3 reply-password">
                    <input
                      class="form-control form-control-sm"
                      type="password"
                      aria-label="비밀번호"
                      placeholder="비밀번호"
                      maxlength="6"
                      name="replyPassword"
                      id="replyPassword"
                    />
                  </div>
                </div>
                <div class="reply-content">
                  <textarea
                    class="form-control"
                    placeholder="댓글"
                    style="height: 100px; resize: none"
                    maxlength="500"
                    name="replyContent"
                    id="replyContent"
                  ></textarea>
                </div>
                <div class="d-flex justify-content-end mt-1">
                  <div class="btn btn-primary btn-sm submit-reply-btn">
                    등록
                  </div>
                </div>
              </div>
            </form>
          </div>
          {{/each}}
        </div>
        <div class="post-comment-input mt-2 px-1">
          <form
            action="/discussion-room/post/reply"
            method="post"
            id="submit-reply"
          >
            <div class="d-flex align-items-center user-info flex-wrap">
              <div class="d-flex align-items-center mb-1">
                <input type="hidden" name="postId" value="{{post.id}}" />
                <p style="font-size: 13px; white-space: nowrap; width: 91.85px">
                  닉네임 (1~10자)
                </p>
                <div class="input-nickname ms-1 me-3">
                  <input
                    class="form-control form-control-sm"
                    type="text"
                    placeholder="익명"
                    aria-label="닉네임"
                    value="익명"
                    maxlength="10"
                    id="userName"
                    name="userName"
                  />
                </div>
              </div>
              <div class="d-flex align-items-center mb-1">
                <p style="font-size: 13px; white-space: nowrap">
                  비밀번호 (1~6자)
                </p>
                <div class="input-nickname ms-1">
                  <input
                    class="form-control form-control-sm"
                    type="password"
                    aria-label="비밀번호"
                    maxlength="6"
                    name="password"
                    id="password"
                  />
                </div>
              </div>
            </div>
            <div class="content-container mt-2">
              <textarea
                class="form-control"
                placeholder="댓글"
                style="height: 100px; resize: none"
                maxlength="500"
                name="content"
                id="content"
              ></textarea>
            </div>
            <div class="d-flex justify-content-end mt-1">
              <div class="btn btn-primary btn-sm submit-reply-btn">등록</div>
            </div>
          </form>
        </div>
      </div>
      <div class="d-none d-md-block col-md-2"></div>
    </div>

    <script>
      $(function () {
        $('.submit-reply-btn').on('click', function () {
          const userName = $('#userName').val();
          const password = $('#password').val();
          const content = $('#content').val();
          if (userName === '') {
            alert('닉네임을 입력해주세요.');
            return;
          }

          if (password === '') {
            alert('비밀번호를 입력해주세요.');
            return;
          }

          if (content === '') {
            alert('댓글 내용을 입력해주세요.');
            return;
          }

          $('#submit-reply').submit();
        });

        $('.content').on('click', function () {
          $(this).children('.reply-write-container').toggleClass('d-none');
        });
      });
    </script>
  </body>
</html>
