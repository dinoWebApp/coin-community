<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{> globalcss }} {{> globaljs }}
    <style>
      .room-title {
        border-bottom: solid 2px #0d6efd;
      }

      .post-top {
        border-bottom: solid 2px #0d6efd;
      }

      .post-title {
        font-weight: bold;
        font-size: 18px;
      }

      .post-info {
        font-size: 13px;
      }

      .vertical-divide {
        width: 1px;
        height: 15px;
        margin: 0 5px;
        background-color: #eee;
      }
    </style>
    <title>{{post.title}} - {{ post.coinName }} 종토방</title>
  </head>
  <body>
    {{> header }}
    <div class="d-flex">
      <div class="d-none d-md-block col-md-2"></div>
      <div class="col-12 col-md-8 mt-2">
        <div class="room-title py-2 px-2">
          <h3>{{post.coin_name}} 종토방</h3>
        </div>
        <div class="post-top mb-4 px-2">
          <div class="post-title mt-3 mb-1">
            <p>{{ post.title }}</p>
          </div>
          <div class="post-info d-flex justify-content-between mb-3">
            <div class="d-flex post-info align-items-center">
              <div class="post-user-name">
                <p>{{ post.user_name }}</p>
              </div>
              <div class="vertical-divide"></div>
              <div>
                <p>{{ post.timestamp }}</p>
              </div>
            </div>
            <div class="d-flex post-info">
              <div class="me-2">
                <p>조회 {{ post.views }}</p>
              </div>
              <div>
                <p>추천 {{ post.likes }}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="post-content px-2">
          <p>{{ post.content }}</p>
        </div>
        <div class="d-none d-md-block col-md-2"></div>
      </div>
    </div>
  </body>
</html>
