<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{> globalcss}} {{> globaljs}}
    <title>코인 종토방 - 코종방</title>
  </head>
  <body>
    {{> header}}
    <h3>원화 마켓</h3>
    <table class="table krw-market">
      <thead>
        <tr>
          <th scope="col">코인명</th>
          <th scope="col">현재 가격</th>
          <th scope="col">전일 종가</th>
          <th scope="col">당일 시가</th>
          <th scope="col">당일 최고가</th>
          <th scope="col">당일 최저가</th>
          <th scope="col">전일 대비 변화율</th>
        </tr>
      </thead>
      <tbody class="krw-market">
        {{#each coinInfo.krwMarket }}
        <tr>
          <th scope="row">{{korean_name}}</th>
          <td>{{trade_price}}</td>
          <td>{{ prev_closing_price}}</td>
          <td>{{ opening_price}}</td>
          <td>{{ high_price }}</td>
          <td>{{ low_price }}</td>
          <td {{#isGreater signed_change_rate 0 }}
            style="color: green" 
          {{else}}
            style="color: red" 
          {{/isGreater}}>{{ signed_change_rate }}%</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
