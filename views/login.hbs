<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{> globalcss}} {{> globaljs}}
    <title>로그인</title>
  </head>
  <body>
    {{> header}}
    <form class="login-container" method="post" action="/login">
      <div class="d-flex justify-content-center input-id">
        <input type="text" class="form-control" name="id" , id="name" />
      </div>
      <div class="d-flex justify-content-center input-password">
        <input
          type="password"
          class="form-control"
          name="password"
          ,
          id="password"
        />
      </div>
    </form>
  </body>
</html>
